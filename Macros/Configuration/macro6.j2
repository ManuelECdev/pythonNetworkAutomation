{%- macro macro6(interfaces) -%}
{%- for interface in interfaces %}
interface {{ interface.interfaceName }}{{ interface.interfaceNumber }}.{{ interface.vlanId }}
  description xfer_{{ interface.vrfName }}
  encapsulation dot1q {{ interface.vlanId }}
  vrf member {{ interface.vrfName }}
  no ip redirects
  ip address {{ interface.ipMask.ip }}/{{ interface.ipMask.prefixlen }}
  ip ospf authentication message-digest
  ip ospf message-digest-key 1 md5 {{ interface.ospfPassword }}
  no ip ospf passive-interface
  ip router ospf {{  interface.ospfProcess }} area {{  interface.ospfArea }}
  ip ospf priority {{  interface.ospfPriority }}
  no shutdown
{% endfor -%}
{%- endmacro -%}
